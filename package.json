{
  "name": "bollettini",
  "version": "1.0.7",
  "description": "Generatore di bollettini",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean-build": "rimraf build dist backend",
    "build-backend": "npm run clean-build && pyinstaller --noconfirm backend.spec --distpath ./backend && copy config.ini backend\\backend",
    "build-backend-zip": "npm run build-backend && node -e \"const pkg = require('./package.json'); require('fs').writeFileSync('backend/version.txt', pkg.version)\" && powershell Compress-Archive -Path backend -DestinationPath backend.zip -Force",
    "build": "electron-builder --win --publish never",
    "build-full": "npm run build-backend-zip && electron-builder --win --publish never",
    "dist": "electron-builder --win --publish never",
    "publish": "electron-builder --win --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Simone Tosello (DHL)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "extract-zip": "^2.0.1",
    "node-stream-zip": "^1.15.0"
  },
  "build": {
    "appId": "com.dhl.generatore-bollettini",
    "productName": "GeneratoreBollettini",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "logost.png",
      "excel.png",
      "start.png",
      "config.ini",
      "backend.zip",
      "completion-icon.json",
      "LegoDHL.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "icon": "logost.png",
      "requestedExecutionLevel": "highestAvailable"
    },
    "asarUnpack": [
      "backend.zip"
    ],
    "msi": {
      "perMachine": false,
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Generatore Bollettini"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "ToseSenpai",
      "repo": "bollettini",
      "private": false
    }
  }
}
